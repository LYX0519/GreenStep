<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_bg"
    android:padding="15dp">

    <TextView
        android:id="@+id/confirmation_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/inter"
        android:text="Are you sure you want to redeem your\nrewards for tree plantation using\n10,000 leaves?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp" />

    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmation_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:backgroundTint="#CAFFBE"
            android:fontFamily="@font/quicksand_bold"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:text="Yes"
            android:textColor="#000000"
            android:textSize="10sp"
            app:cornerRadius="5dp"
            app:strokeColor="#32D74B"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/quicksand_bold"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:text="No"
            android:textColor="#000000"
            android:textSize="10sp"
            app:cornerRadius="5dp"
            app:strokeColor="#32D74B"
            app:strokeWidth="1dp" />
    </FrameLayout>
</RelativeLayout>