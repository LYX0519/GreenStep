<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recCardEventParent"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">
        <FrameLayout
            android:id="@+id/frameStackcreatefromfra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/viewCreatefromfra"
                android:layout_width="300dp"
                android:layout_height="230dp"
                android:layout_gravity="top|start"
                android:layout_marginBottom="10dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/recImage"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_gravity="start"
                android:scaleType="fitXY"
                android:src="@drawable/uploadimg"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Corner20dp"
                tools:ignore="ContentDescription"
                 />

            <LinearLayout
                android:id="@+id/linearColumnrestoringmangr"
                style="@style/groupStylegreen_50_e5cornerRadius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recTitle"
                    style="@style/txtQuicksandbold18_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="12dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Event Name" />

                <LinearLayout
                    android:id="@+id/linearRowwith"
                    android:layout_width="@dimen/_250pxh"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="26dp"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtWith"
                        style="@style/txtQuicksandlight12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="0.11"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_with" />

                    <TextView
                        android:id="@+id/recDesc"
                        style="@style/txtQuicksandregular12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="0.89"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Organisation" />



                </LinearLayout>


            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnJoin"
                style="@style/btnSolidRoundedOutline_18"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="255dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="30dp"
                android:paddingTop="9dp"
                android:paddingEnd="30dp"
                android:paddingBottom="9dp"
                android:singleLine="true"
                android:text="JOIN !"
                app:cardElevation="8dp"/>

        </FrameLayout>
    </androidx.cardview.widget.CardView>
